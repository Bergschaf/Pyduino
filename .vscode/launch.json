{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Launch Client",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}"
            ],
            "outFiles": [
                "${workspaceRoot}/client/out/**/*.js"
            ],
            "preLaunchTask": {
                "type": "npm",
                "script": "compile"
            },
            "env": {
                "VSCODE_DEBUG_MODE": "true"
            }
        },
        {
            "name": "Launch Server",
            "type": "python",
            "request": "launch",
            "module": "server",
            "args": [
                "--tcp"
            ],
            "justMyCode": false,
            "python": "${workspaceFolder}/env/Scripts/python.exe",
            "cwd": "${workspaceFolder}",
            "env": {
                "python.PYTHONPATH": "${workspaceFolder}"
            }

        },
        {
            "name": "Launch Server [WebSockets]",
            "type": "python",
            "request": "launch",
            "module": "server",
            "args": [
                "--ws"
            ],
            "justMyCode": false,
            "python": "$${workspaceFolder}/env/Scripts/python.exe",
            "cwd": "${workspaceFolder}",
            "env": {
                "python.PYTHONPATH": "${workspaceFolder}"
            }
        },


    ],
    "compounds": [
        {
            "name": "Server + Client",
            "configurations": [
                "Launch Server",
                "Launch Client"
            ]
        }
    ]
}